  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "node": "hardhat node",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "build": "pnpm exec hardhat compile && node ./lib/abis-exports.js",
    "deploy-local": "hardhat run ./ignition/modules/deploy.js --network localhost",
